{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(claude mcp list:*)",
      "Bash(claude mcp tools:*)",
      "Bash(curl:*)",
      "Bash(cut:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(grep:*)",
      "Bash(npm install:*)",
      "Bash(npm run build:*)",
      "Bash(npm run check:*)",
      "Bash(npm run check:lint:*)",
      "Bash(npm run check:types:*)",
      "Bash(npm run db:push:*)",
      "Bash(npm run dev:*)",
      "Bash(npm run format:*)",
      "Bash(npm run storybook:start:*)",
      "Bash(npm run test:*)",
      "Bash(npm run test:compile:*)",
      "Bash(npm uninstall:*)",
      "Bash(npx eslint:*)",
      "Bash(npx jest:*)",
      "Bash(npx shadcn@latest add:*)",
      "Bash(npx shadcn@latest init --yes)",
      "Bash(npx supabase --help:*)",
      "Bash(npx supabase db --help:*)",
      "Bash(npx supabase link --help:*)",
      "Bash(pkill:*)",
      "Bash(timeout 10 npm run dev:*)",
      "Bash(timeout 5 npm run dev:*)",
      "Bash(timeout 8 npm run dev:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:mantine.dev)",
      "WebFetch(domain:tanstack.com)",
      "WebFetch(domain:www.neobrutalism.dev)",
      "WebFetch(domain:www.nngroup.com)",
      "WebSearch",
      "mcp__Ref__ref_read_url",
      "mcp__Ref__ref_search_documentation",
      "mcp__chrome-devtools__*",
      "mcp__exa__get_code_context_exa",
      "mcp__supabase__*"
    ],
    "deny": [],
    "ask": []
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "~/bin/claude-statusline"
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "lua-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754313915132
  },
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.config/tmux/plugins/tmux-claude-status/hooks/better-hook.sh PreToolUse"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.config/tmux/plugins/tmux-claude-status/hooks/better-hook.sh Stop"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.config/tmux/plugins/tmux-claude-status/hooks/better-hook.sh Notification"
          }
        ]
      }
    ]
  }
}
