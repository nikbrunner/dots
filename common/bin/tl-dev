#!/usr/bin/env bash
# vim: set filetype=sh:

# TODO: start nvm use automatically if `.nvmrc` exists

tmux split-window -v -p 20 -c "#{pane_current_path}"

tmux split-window -h -p 66 -c "#{pane_current_path}"
tmux split-window -h -p 50 -c "#{pane_current_path}"

tmux select-pane -t 1
tmux split-window -h -p 80 -c "#{pane_current_path}"

# sleep 1
tmux select-pane -t 1
tmux send-keys "clear" Enter
tmux send-keys "claude" Enter

# refocus nvim
sleep 1
tmux select-pane -t 2
tmux send-keys "nvim ." Enter
