{
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-7-sonnet"
    },
    "version": "2"
  },
  "icon_theme": "Catppuccin Macchiato",
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_assistant": false
  },
  "assistant": {
    "always_allow_tool_actions": true,
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "terminal": true,
          "batch_tool": true,
          "code_symbols": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": false,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": false,
          "move_path": false,
          "now": true,
          "path_search": true,
          "read_file": true,
          "grep": true,
          "symbol_info": true,
          "thinking": true,
          "create_directory": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet-thought"
    },
    "version": "2"
    // "enable_experimental_live_diffs": true
  },
  "ssh_connections": [
    {
      "host": "BC_OFFICE_LAN",
      "projects": []
    }
  ],
  "cursor_blink": false,
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "theme": {
    "mode": "system",
    "dark": "Black Atom — TER ∷ Fall Night",
    "light": "Black Atom — JPN ∷ Koyo Hiru"
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  // "ui_font_family": "Maple Mono",
  "ui_font_family": "TX-02",
  "ui_font_size": 18,
  "buffer_line_height": "comfortable",
  "buffer_font_size": 14,
  "buffer_font_family": "TX-02",
  // "buffer_font_family": "JetBrainsMono Nerd Font",
  // "buffer_font_family": "ComicShannsMono Nerd Font",
  // "buffer_font_family": "ComicCodeLigatures Nerd Font",
  // "buffer_font_family": "RecMonoDuotone Nerd Font",
  // "buffer_font_family": "SF Mono",
  // "buffer_font_family": "Maple Mono NF",
  "show_completions_on_input": true,
  "git": {
    "git_gutter": "tracked_files"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "indent_guides": {
    "enabled": false
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred"
  },
  "project_panel": {
    "git_status": true,
    "indent_guides": {
      "show": "never"
    }
  },
  "diagnostics": {
    // Whether to show warnings or not by default.
    "include_warnings": true,
    // Settings for inline diagnostics
    "inline": {
      // Whether to show diagnostics inline or not
      "enabled": true
    }
  },
  "semantic_index": {
    "enabled": true
  },
  "format_on_save": "on",
  "terminal": {
    "line_height": "standard",
    "font_family": "JetBrainsMono Nerd Font",
    "working_directory": "current_project_directory"
  },
  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": false
        }
      }
    },
    "vtsls": {
      "settings": {
        "typescript": {
          "preferences": {
            "importModuleSpecifier": "relative"
          }
        }
      }
    },
    "eslint": {
      "settings": {
        "eslint": {
          "enable": true
        }
      }
    }
  }
}
