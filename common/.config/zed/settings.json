{
  "agent": {
    "use_modifier_to_send": true,
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5"
    },
    "always_allow_tool_actions": true
  },
  "hide_mouse": "on_typing_and_movement",
  "icon_theme": "Catppuccin Macchiato",
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": false
  },
  "ssh_connections": [
    {
      "host": "BC_OFFICE_LAN",
      "projects": []
    }
  ],
  "cursor_blink": false,
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "theme": {
    "mode": "system",
    "dark": "Black Atom — TER ∷ Fall Night",
    "light": "Black Atom — JPN ∷ Koyo Hiru"
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "ui_font_family": "IosevkaTerm Nerd Font",
  "ui_font_size": 20,
  "buffer_line_height": "comfortable",
  "buffer_font_size": 20,
  "buffer_font_family": "IosevkaTerm Nerd Font",
  "buffer_font_weight": 400,
  "show_completions_on_input": true,
  "tabs": {
    "show_diagnostics": "all",
    "git_status": true,
    "file_icons": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "git": {
    "git_gutter": "tracked_files"
  },
  "indent_guides": {
    "enabled": false
  },
  "git_panel": {
    "dock": "left",
    "status_style": "icon",
    "sort_by_path": true
  },
  "project_panel": {
    "git_status": true,
    "indent_guides": {
      "show": "never"
    }
  },
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true
    }
  },
  "format_on_save": "on",
  "terminal": {
    "line_height": "standard",
    "font_family": "IosevkaTerm Nerd Font",
    "working_directory": "current_project_directory"
  },
  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "preferences": {
            "importModuleSpecifier": "relative"
          }
        }
      }
    },
    "eslint": {
      "settings": {
        "eslint": {
          "enable": true
        }
      }
    },
    "biome": {
      "settings": {
        "config_path": "./biome.json",
        "require_config_file": true
      }
    }
  },
  "languages": {
    "JavaScript": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "TypeScript": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "TSX": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "JSON": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "JSONC": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "CSS": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "GraphQL": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    }
  }
}
