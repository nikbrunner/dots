{
  "repos_base_path": "~/repos",
  "parallel_jobs": 4,
  "tmux_layout": "ide",
  "tmux_layouts_dir": "~/.config/tmux/layouts",
  "ensure_cloned": [
    "git@github.com:nikbrunner/dots",
    "git@github.com:nikbrunner/notes",
    "git@github.com:nikbrunner/dcd-notes",
    "git@github.com:nikbrunner/koyo",
    { "url": "git@github.com:nikbrunner/tsm", "postClone": "./install.sh" },
    { "url": "git@github.com:nikbrunner/bm", "postClone": "make install" },
    { "url": "git@github.com:nikbrunner/tmux-file-picker", "postClone": "chmod +x tmux-file-picker && ln -sf \"$(pwd)/tmux-file-picker\" ~/.local/bin/tmux-file-picker" },
    "git@github.com:black-atom-industries/*"
  ]
}
